#/usr/bin/env bash

rm -rf ~/.config/nvim
cp -r env/.config/nvim ~/.config/nvim
cp -r env/.config/tmux ~/.config/tmux
cp -r env/.local ~/.local

mkdir -p ~/.local/scripts
cp $DEV_ENV/tmux-sessionizer/tmux-sessionizer $HOME/.local/scripts/tmux-sessionizer
cp $DEV_ENV/env/.zsh_profile $HOME/.zsh_profile
cp $DEV_ENV/env/.zshrc $HOME/.zshrc
cp $DEV_ENV/env/.xprofile $HOME/.xprofile
cp $DEV_ENV/env/.tmux-sessionizer $HOME/.tmux-sessionizer
cp $DEV_ENV/dev-env $HOME/.local/scripts/dev-env
